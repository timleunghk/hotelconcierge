<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.chatt.demo.FragmentChat">

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:divider="@color/white"
        android:dividerHeight="@dimen/pad_5dp"
        android:fastScrollEnabled="true"
        android:paddingBottom="@dimen/pad_10dp"
        android:paddingTop="@dimen/pad_10dp"
        tools:listitem="@layout/chat_item_rcv"
        >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_light"
        android:gravity="center_vertical"
        android:padding="@dimen/pad_5dp"
        tools:context=".MainActivity"
        android:weightSum="1"
        >


        <EditText
            android:id="@+id/txt"
            style="@style/edittext_msg"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="@string/type_msg"
            android:layout_weight="0.66">


        </EditText>

        <Button
            android:id="@+id/btnSend"
            style="@style/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_send" />

        <Button
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:id="@+id/btnVideoCall"
            style="@style/btn"
            android:background="@mipmap/ic_video_call" />



    </LinearLayout>

</FrameLayout>
